post_remove() {
  # Remove sudoers file if it exists
  if [ -f /etc/sudoers.d/99-swl ]; then
    rm -f /etc/sudoers.d/99-swl
  fi

  # Remove user log files and desktop entries (for all users)
  for home in /home/*; do
    [ -d "$home" ] || continue
    rm -rf "$home/.local/share/swl"
  done

  # Remove state files in /var/lib/swl
  if [ -d /var/lib/swl ]; then
    rm -rf /var/lib/swl
  fi
}